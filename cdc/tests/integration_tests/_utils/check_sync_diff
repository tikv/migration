#!/bin/bash
# parameter 1: work directory
# parameter 2: src pd
# parameter 3: dst pd
# parameter 4: max check times

CUR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
TLS_DIR=$(cd $CUR/../_certificates && pwd)

workdir=$1
UP_PD=$2
DOWN_PD=$3
if [ $# -ge 4 ]; then
	check_time=$4
else
	check_time=50
fi
PWD=$(pwd)

if ! command -v rawkv_data &>/dev/null; then
	cd $CUR/../../..
	make rawkv_data
	cd $PWD
fi
set +e

sleep 1 # sleep to avoid unnecessary checksum, as many existed codes check sync just after rawkv_op

cd $workdir
i=0
while [ $i -lt $check_time ]; do
	rm -rf $workdir/rawkv_data/
	rawkv_data checksum --src-pd $UP_PD --dst-pd $DOWN_PD --ca-path=$TLS_DIR/ca.pem --cert-path=$TLS_DIR/client.pem --key-path=$TLS_DIR/client-key.pem
	ret=$?
	if [ "$ret" == 0 ]; then
		echo "check diff successfully"
		break
	fi
	((i++))
	echo "check diff failed $i-th time, retry later"
	sleep 1
done

if [ $i -ge $check_time ]; then
	echo "check diff failed at last"
	exit 1
fi

cd $PWD
